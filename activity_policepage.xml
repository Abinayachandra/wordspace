<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/policebrikbg"
    android:layout_height="match_parent"
    tools:context=".Policepage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:text=" POLICE LOGIN "
        android:textColor="#A50404"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:background="@drawable/plcbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonbg"
                android:gravity="center"
                android:text=" Login ID:    "
                android:textColor="#fff"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/ed_policelogin"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgshape"
                android:hint="Enter ID"
                android:paddingLeft="20dp"

                android:textColor="#047E72"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonbg"

                android:gravity="center"
                android:text=" Login Password: "
                android:textColor="#fff"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/ed_policepass"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"


                android:layout_marginTop="20dp"
                android:background="@drawable/bgshape"
                android:hint="Enter Password"
                android:paddingLeft="20dp"
                android:textColor="#047E72"
                android:textSize="25dp" />


        </LinearLayout>

        <ImageButton
            android:id="@+id/img_logo_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/policelogo" />

        <TextView
            android:id="@+id/tv_submitid1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SUBMIT"
            android:textColor="#A50404"
            android:textSize="19dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="70dp" />

    </LinearLayout>


</RelativeLayout>