<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Complaint_Person_details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:background="@drawable/policelogo"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:id="@+id/complaints_tv1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:textSize="20dp"
                android:textColor="#00897B"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/complaints_tv2"

                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center"
                android:textColor="#00897B"

                android:textSize="20dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/policebrikbg"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#A50404"
            android:gravity="center"
            android:text="Complain Registration Form :"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#A50404"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Complainant's details :"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/ed_complaints_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:textColor="#00897B"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:hint="Name"/>
        <EditText
            android:id="@+id/ed_complaints_number"

            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:textColor="#00897B"
            android:paddingLeft="10dp"
            android:hint="Mobile Number"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="GENDER :"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="#A50404"/>
            <Spinner
                android:id="@+id/sp_compalints_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="#00897B"
                android:textSize="20dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/ed_complaints_crimtype"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#00897B"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:hint="Crime Type"/>

        <EditText
            android:id="@+id/ed_complaints_city"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#00897B"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:hint="City"/>
        <Button
            android:id="@+id/bt_compalints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00897B"
            android:layout_gravity="center"
            android:text="Next"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>



</LinearLayout>