<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Success_notification">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

       >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/policelogo"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C8FFFFFF"/>
    </LinearLayout>
    <TextView
        android:id="@+id/id_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your \n complaint has been\n registered"
        android:gravity="center"
        android:textColor="#00897B"
        android:layout_centerInParent="true"

        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Further Results are send trough \nSMS or 'We will Make Call' "
        android:gravity="center"
        android:layout_below="@+id/id_center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#00897B"
        android:textSize="25dp"
       />




</RelativeLayout>