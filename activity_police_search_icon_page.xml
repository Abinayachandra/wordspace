<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Police_Search_icon_page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/tv_Search_icon_page1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Police Station Mayiladuthurai"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#00897B"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_Search_icon_page2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:text="Police Station"
            android:textColor="#00897B"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_icon"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/id_viewcomplaints1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Complaints"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#00897B"
        android:textAllCaps="true"/>




</LinearLayout>