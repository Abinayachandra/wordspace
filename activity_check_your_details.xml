<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Check_Your_Details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#fff"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/policelogo"
                android:layout_marginLeft="30dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tv_check_dts1"

                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_check_dts2"

                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Please Check Your Details"
            android:textColor="#00897B"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Phone Number"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/check_user_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"

                    android:textSize="20dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="E-Mail Id"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/check_user_Mailid"
                    android:layout_marginLeft="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="20dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Date"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/check_user_Date"
                    android:layout_marginLeft="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="20dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Gender"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/check_user_Gender"
                    android:layout_marginLeft="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="20dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="City"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/check_user_city"
                    android:layout_marginLeft="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="20dp"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Complainant's Details"
            android:textColor="#00897B"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Name"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/check_Complain_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Phone Number"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/check_Complain_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"

                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Gender"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/check_complain_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"

                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Crime Type"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/check_complain_crime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"

                    android:gravity="left|center"
                    android:textSize="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="City"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text=":"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/check_city_complain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
       <Button
           android:id="@+id/bt_check_done1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Done"
           android:layout_gravity="center"
           android:layout_marginTop="50dp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>

    </LinearLayout>







</ScrollView>